<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RestaurantActivity">


    <TextView
        android:id="@+id/restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/restaurant_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--    <ImageView-->
    <!--        android:id="@+id/imageView"-->
    <!--        android:layout_width="261dp"-->
    <!--        android:layout_height="220dp"-->
    <!--        android:layout_marginTop="13dp"-->
    <!--        android:clickable="true"-->
    <!--        android:onClick="onClickWrapper"-->
    <!--        android:src="@drawable/picasso"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/waitTimes"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress"-->
    <!--        app:layout_constraintVertical_bias="0.0" />-->

    <TextView
        android:id="@+id/restaurantAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_address"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName" />

    <TableLayout
        android:id="@+id/waitTimes"
        android:layout_width="408dp"
        android:layout_height="175dp"
        android:layout_marginTop="240dp"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="86dp"
                android:background="#4CAF50"
                android:text="Wait Time"
                android:textAlignment="center" />

            <TextView
                android:layout_width="202dp"
                android:background="#4CAF50"
                android:text="Reported"
                android:textAlignment="center" />

            <TextView
                android:background="#4CAF50"
                android:text="Reported by"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/submitWaitTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Wait Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waitTimes" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="322dp"
        android:layout_height="228dp"
        app:layout_constraintBottom_toTopOf="@+id/waitTimes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress"
        app:layout_constraintVertical_bias="0.424">

        <LinearLayout
            android:id="@+id/imageHost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>